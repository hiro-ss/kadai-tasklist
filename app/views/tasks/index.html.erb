<% if logged_in? %>
    <%= form_with(model: @task, local: true) do |f| %>
      <%= f.text_area :content %>
      <%= f.text_area :status %>
      <%= f.submit "task" %>
    <% end %>
    
 <ul>
   <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> <%= task.status %></li>
   <% end %>
 </ul>
    
<% else %>
  <h1>Task list</h1>
<%= link_to "Login", login_path %>
<%= link_to "Sign up now!", signup_path %>

<% end %>
